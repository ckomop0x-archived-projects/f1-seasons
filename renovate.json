{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "config:base",
    ":semanticCommits",
    ":dependencyDashboard",
    ":ignoreUnstable"
  ],
  "labels": [
    "[bot] renovate"
  ],
  "prConcurrentLimit": 5,
  "rebaseWhen": "auto",
  "postUpgradeTasks": {
    "commands": [
      "npm version patch --no-git-tag-version"
    ],
    "fileFilters": ["package.json"]
  },
  "allowedPostUpgradeCommands": [
    "npm version patch --no-git-tag-version"
  ]
}
