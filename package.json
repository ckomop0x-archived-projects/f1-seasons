{
  "name": "formula-1-season-standings",
  "version": "1.0.0",
  "description": "",
  "main": "index.tsx",
  "scripts": {
    "build": "rm -rf dist && NODE_ENV='production' webpack -p",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "commit": "git-cz",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:write": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "start": "rm -rf dist && webpack --mode=development && node server.js",
    "test": "./node_modules/.bin/jest --no-cache --no-watchman",
    "test:coverage": "jest --coverage",
    "test:watch": "./node_modules/.bin/jest --watch"
  },
  "author": "Pavel \"Ckomop0x\" Klochkov <paul.klochkov@gmail.com> (https://ckomop0x.github.io/)",
  "homepage": "https://github.com/ckomop0x/formula-1-season-standings#readme",
  "license": "ISC",
  "dependencies": {
    "commitizen": "3.1.1",
    "express": "^4.16.4",
    "ghooks": "2.0.4",
    "isomorphic-unfetch": "3.0.0",
    "nprogress": "^0.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.0.2",
    "styled-components-ts": "0.0.14",
    "typescript": "^3.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.7",
    "@types/nprogress": "0.0.29",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-test-renderer": "^16.8.1",
    "@types/styled-components": "^4.0.3",
    "@types/webpack": "^4.4.20",
    "autoprefixer": "^9.2.1",
    "css-loader": "^1.0.0",
    "cz-conventional-changelog": "2.1.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.2.2",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.4.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-custom-media": "^7.0.7",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.2",
    "react-test-renderer": "^16.6.0",
    "semantic-release": "15.13.14",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-import-rules": "^0.3.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typed-css-modules": "^0.3.6",
    "typings-for-css-modules-loader": "^1.7.0",
    "uglifyjs-webpack-plugin": "2.1.3",
    "url-loader": "^1.1.2",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "test/coverage",
    "coverageReporters": [
      "cobertura",
      "html"
    ],
    "collectCoverageFrom": [
      "src/scripts/*.{ts,tsx}",
      "src/scripts/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!src/scripts/**/__tests__/*.spec.{ts,tsx}",
      "!src/scripts/**/*.spec.{ts,tsx}",
      "!src/scripts/*.d.ts",
      "!src/scripts/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "<rootDir>/test-preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [
      "^.+\\.(d.ts)$"
    ],
    "testRegex": "/__tests__/.*\\.(ts|tsx|js|jsx)$"
  }
}
