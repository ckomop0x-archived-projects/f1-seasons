{
  "name": "f1-winners-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "copy-base-styles": "mkdir dist/css && cp ./src/styles/base.css dist/css/ && cp ./src/styles/normalize.css dist/css/",
    "build": "npx tcm src && rm -rf dist && npx ./node_modules/.bin/webpack -p && npm run copy-base-styles",
    "start": "npx tcm src && npm run build -mode=development && node server.js",
    "test:watch": "./node_modules/.bin/jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "paul.klochkov@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@types/gsap": "^1.19.2",
    "@types/react-test-renderer": "^16.0.3",
    "axios": "^0.18.0",
    "express": "^4.16.4",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "typescript": "^3.1.3"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/jest": "^23.3.7",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "autoprefixer": "^9.2.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "gsap": "^2.0.2",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-custom-media": "^7.0.7",
    "postcss-loader": "^3.0.0",
    "react-test-renderer": "^16.6.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-import-rules": "^0.3.0",
    "tslint-react": "^3.6.0",
    "typed-css-modules": "^0.3.6",
    "typings-for-css-modules-loader": "^1.7.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "test/coverage",
    "coverageReporters": [
      "cobertura",
      "html"
    ],
    "collectCoverageFrom": [
      "src/scripts/*.{ts,tsx}",
      "src/scripts/**/*.{ts,tsx}",
      "!src/scripts/*.d.ts",
      "!src/scripts/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "<rootDir>/test-preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [
      "^.+\\.(d.ts)$"
    ],
    "testRegex": "(/test/unit/.*|\\.(spec))\\.(ts|tsx|js|jsx)$"
  }
}
